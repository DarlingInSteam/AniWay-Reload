{
    email {$ACME_EMAIL}
}

https://aniway.space {
    encode zstd gzip
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Referrer-Policy "no-referrer-when-downgrade"
        X-Content-Type-Options "nosniff"
    }

    handle /.well-known/acme-challenge/* {
        root * /srv/verifications
        file_server
    }

    # Server-Sent Events (SSE) for notifications
    @sse {
        path /api/notifications/stream*
    }
    handle @sse {
        reverse_proxy gateway-service:8080 {
            flush_interval -1
            header_up Connection "keep-alive"
            header_up Cache-Control "no-cache"
        }
    }

    # WebSocket connections
    @websockets {
        path /api/ws/* /ws/*
    }
    handle @websockets {
        reverse_proxy gateway-service:8080 {
            header_up Connection "Upgrade"
            header_up Upgrade "websocket"
        }
    }

    # API requests to Gateway Service
    handle /api/* {
        reverse_proxy gateway-service:8080
    }

    # Telegram webhooks
    handle /telegram/* {
        reverse_proxy gateway-service:8080
    }

    @prometheus-root {
        path /prometheus
    }
    handle @prometheus-root {
        redir /prometheus/ 302
    }

    @prometheus {
        path /prometheus/ /prometheus/*
    }
    handle @prometheus {
        reverse_proxy aniway-prometheus:9090
    }

    @grafana-root {
        path /grafana
    }
    handle @grafana-root {
        redir /grafana/ 302
    }

    @grafana {
        path /grafana/ /grafana/*
    }
    handle @grafana {
        reverse_proxy aniway-grafana:3000
    }

    @alertmanager-root {
        path /alertmanager
    }
    handle @alertmanager-root {
        redir /alertmanager/ 302
    }

    @alertmanager {
        path /alertmanager/ /alertmanager/*
    }
    handle @alertmanager {
        reverse_proxy aniway-alertmanager:9093
    }

    # All other requests to frontend
    reverse_proxy aniway-frontend:80
}

http://aniway.space {
    handle /.well-known/acme-challenge/* {
        root * /srv/verifications
        file_server
    }

    redir https://aniway.space{uri}
}
